@using Car_Rental_web_App.ViewModels;
@model ReservationViewModel;

@{
    ViewData["Title"] = "Create Reservation";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Create a Reservation</h2>

    <form asp-action="RentCar" method="post">

        <input type="hidden" asp-for="CarId" value="@ViewBag.CarId" />

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="StartDate" class="form-label"></label>
            <input asp-for="StartDate" class="form-control" type="date" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="EndDate" class="form-label"></label>
            <input asp-for="EndDate" class="form-control" type="date" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary">Create Reservation</button>
        </div>
    </form>

    <div class="text-center mt-3">
        <a asp-controller="Home" asp-action="Index" class="btn btn-link">Back to Home</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}
